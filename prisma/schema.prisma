generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Course {
  id          String      @id @default(cuid())
  name        String
  duration    Int
  disciplines Discipline[] @relation("CourseDisciplines") // Conexão com Discipline
}

model Discipline {
  id            String       @id @default(cuid())
  name          String
  workload      Int
  nature        String
  period        String
  courseId      String?

  course        Course?      @relation("CourseDisciplines", fields: [courseId], references: [id]) // Inverso do relacionamento com Course

  prerequisites Discipline[] @relation("DisciplinePrerequisites", references: [id]) // Relacionamento de pré-requisitos
  requiredBy    Discipline[] @relation("DisciplinePrerequisites", references: [id]) // Campo inverso obrigatório para auto-relacionamento
}
